<% if flash[:success] %>
      <div class="alert alert-primary" id="alert">
         <%= flash[:success] %> 
      </div>
<% end %>
<div class ="row">
    <div class="col-xs-6">   
        <h2 class="sub-header">Class</h2>
        <div class="table-responsive">
            <table class ="table table-striped">
            <thead>
                <tr>
                <th>Name</th>
                <th>Email</th>
                <th colspan="3"></th>
                </tr>
            </thead>

            <tbody>
                <% @users.each do |user| %>
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= link_to 'Join Group', add_to_group_path(uid: user.id, gid: @group.id), method: :post, class: "btn btn-danger"%></td>
                </tr>
                <% end %>
            </tbody>
            </table>
        </div>
    </div>

    <div class="col-xs-6">   
        <h2 class="sub-header">Group</h2>
        <div class="table-responsive">
            <table class ="table table-striped">
            <thead>
                <tr>
                <th>Name</th>
                <th>Email</th>
                <th colspan="3"></th>
                </tr>
            </thead>

            <tbody>
                <% @groupUsers.each do |user| %>
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= link_to 'Remove', add_to_group_path(uid: user.id, gid: @group.id), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
                </tr>
                <% end %>
            </tbody>
            </table>
        </div>
    </div>
</div>

<%= link_to 'Back', group_url(id: @group.id) %>