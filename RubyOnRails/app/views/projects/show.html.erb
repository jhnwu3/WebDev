<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @project.projectname %>
</p>

<p>
  <strong>Type:</strong>
  <%= @project.projecttype %>
</p>

<p>
  <strong>Date:</strong>
  <%= @project.date %>
</p>

<h1> List of Groups Assigned</h1>
<table class ="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projectGroups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %> |
<%= link_to 'Assign Groups', assign_group_url(pid: @project.id), class: "btn btn-secondary" %>
